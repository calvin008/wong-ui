.big {
	padding: 0 40rpx;
	font-size: 32rpx;
	width:90%;
	height: 80rpx;
}
/* 中按钮 */
.sm {
	padding: 0 20rpx;
	font-size: 20rpx;
	height: 48rpx;
}
.radius {
	border-radius: 60rpx;
}
.hollow-red {
	border: 1rpx solid #ff0000;
	color:#ff0000;
}
.hollow-blue {
	border: 1rpx solid #007AFF;
	color:#007AFF;
}
