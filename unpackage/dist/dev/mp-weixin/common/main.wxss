/* 列表 */
.list-bar {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	position: relative;
	padding-left: 20rpx;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	min-height: 100rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	color:#2c2c2c;
	border-bottom:1px solid rgba(0, 0, 0, 0.1);
}
/* 盒子 */
.box-f {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-flow:wrap;
	        flex-flow:wrap;
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.box-b {
	display:block;
}
/* 边距 */
.margin-tb {
	margin-top: 20rpx;
	margin-bottom: 20rpx;
}
.margin {
	margin:20rpx;
}
.margin-left {
	margin-left: 40rpx;
}
/* 色彩 */
.white-color {
	color:#FFFFFF;
}
.red-color {
	color:##FF0000;
}
/* button */
.w-btn {
	position: relative;
	border: 0rpx;
	display: -webkit-inline-box;
	display: -webkit-inline-flex;
	display: inline-flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	box-sizing: border-box;
	padding: 0 30rpx;
	font-size: 28rpx;
	height: 64rpx;
	line-height: 1;
	text-align: center;
	text-decoration: none;
	overflow: visible;
	margin-left: initial;
	-webkit-transform: translate(0rpx, 0rpx);
	        transform: translate(0rpx, 0rpx);
	margin-right: initial;
}
.w-btn.button-hover {
	-webkit-transform: translate(1rpx, 1rpx);
	        transform: translate(1rpx, 1rpx);
}
.w-btn::after {
	display: none;
}
